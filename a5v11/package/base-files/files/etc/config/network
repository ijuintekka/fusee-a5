config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'wan'
	option ifname 'eth0'
	option proto 'dhcp'
	option zone 'wan'
	
config interface 'lan'
	option type 'bridge'
	option ifname 'eth0'
	option proto 'dhcp'
	option zone 'wan'

config interface 'wlan'
	option type 'bridge'
	option ifname 'wlan0'
	option proto 'static'
	option netmask '255.255.255.0'
	option ipaddr '10.1.5.1'
	option zone 'wan'
	
config route
	option interface 'wlan'
	option target '0.0.0.0'
	option netmask '0.0.0.0'
	option gateway '10.1.5.1'
	option metric '1'
	
config route
	option interface 'wlan'
	option target '10.1.5.1'
	option netmask '255.255.255.255'
	option metric '0'

config device 'lan_dev'
	option name 'eth0'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '0'